<div class="container">
    <% if current_headhunter.present? %>
        <%= form_with model: @comment, url: register_comment_profile_path, method: :post do |form|%>
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group">
                        <%= form.label :comment %>
                        <%= form.text_area :comment, class:"form-control", rows:4%>
                        <br>
                        <%= form.submit 'Envia comentário', class: "btn btn-primary"%>
                    </div>
                </div>
            </div>
        <%end%>

    <% end %>

    <div class="row">
        <div class="col-sm-10">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>COMENTÁRIOS</th>
                    </tr>
                </thead>
                <tbody>
                    <%if !@candidate_comments.present?%>
                        <tr>
                            <td>O candidato não possui comentários registrado em seu perfil.</td>
                        </tr>
                    <%else%>
                        <% @candidate_comments.each do |comment|%>
                            <tr>
                                <td>
                                    <div class="col">
                                        <strong><%= comment.heading%></strong>
                                    </div>
                                    <div class="col">
                                        <p> "<%= comment.comment %>" </p>
                                        <em><%= comment.customized_send_time_message%></em>
                                    </div>
                                </td>
                            </tr>
                        <%end%>
                    <%end%>
                </tbody>
            </table>

            <%= link_to 'Voltar', :back, class: "btn btn-primary" %>
        </div>
    </div>
</div>