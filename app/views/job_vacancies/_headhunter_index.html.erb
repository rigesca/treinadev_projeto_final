<div class="container">
    <h3>Vagas cadastrar para o usuario: <em><%=current_headhunter.email%></em></h3>
    <p><%= link_to 'Cadastrar vaga', new_job_vacancy_path %>

    <div class="row">
        <div class="col-sm-10">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>VAGAS</th>
                    </tr>
                </thead>
                <tbody>
                    <%if job_vacancies.empty?%>
                        <tr>
                            <td>Seu perfil nÃ£o possui vagas cadastradas</td>
                        </tr>
                    <%else%>
                        <% job_vacancies.each do |vacancy|%>
                            <tr>
                                <%= render 'vacancy', vacancy: vacancy %>
                            </tr>
                        <%end%>
                    <%end%>
                </tbody>
            </table>
        </div>
    </div>

</div>