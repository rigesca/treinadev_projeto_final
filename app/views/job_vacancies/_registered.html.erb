<div class="row">
    <div class="col-sm-10">
            
        <table class="table table-striped table-bordered">
                
            <thead class="thead-dark">
                <tr>
                    <th><%= table_name.upcase %></th>
                </tr>
            </thead>
                
            <tbody>
                <%if registereds.empty?%>
                        
                    <tr>
                        <td><%= "A vaga nÃ£o possui #{table_name}."%></td>
                    </tr>

                <%else%>
                        
                    <% registereds.each do |registered|%>
                        <tr>
                            <td>
                                
                                <div class="col">
                                    <% if registered.checked? %> 
                                        <span class="glyphicon glyphicon-star"></span>
                                    <% end %>
                                    <%= link_to "#{registered.candidate.profile.name} - #{registered.candidate.profile.calculates_candidate_age}", profile_path(registered.candidate.profile)%>
                                </div>
                                
                                <div class="col">
                                    <%=registered.registered_justification%>
                                    <p></p>
                                </div>
                                
                                <div class="col">
                                    <%=button_to 'Favorito', mark_registered_path(registered), {class: "btn btn-success", id: "#{registered.id}_#{table_name.gsub(' ','_')}"}  %> 
                                </div>

                            </td>
                        </tr>
                    <%end%>

                <%end%>
            </tbody>

        </table>
    </div>
</div>
        